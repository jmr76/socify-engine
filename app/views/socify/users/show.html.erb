<%= render 'socify/shared/cover', user: @user %>
<br>
<div id="user-<%= @user.id %>" class="row">
  <div class="col-lg-3">
    <%= render 'socify/shared/user_info' %>
  </div>
  <div class="col-lg-6">
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('socify/shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/socify//shared/activity') %>
      <% end %>
    </div>
    <%= render 'socify/shared/paginate', resources: @activities %>
  </div>
  <div class="col-lg-3">
    <% if is_current_user?(@user) %>
      <div class="well">
        <ul class="nav nav-pills nav-stacked">
          <li><%= link_to 'Edit Profile', socify.edit_user_path(@user) %></li>
          <li><%= link_to 'Change password', socify.edit_user_registration_path %></li>
          <li><%= link_to 'Friends', socify.friends_user_path(@user) %></li>
          <li><%= link_to 'Followers', socify.followers_user_path(@user) %></li>
          <li><%= link_to 'Deactivate', socify.deactivate_user_path(@user) %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
