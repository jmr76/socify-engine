<% if @event.user %>
  <div id="event-<%= @event.id %>" class="event">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 well">
        <%= render @event, remote: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 well">
        <h4>Comments</h4>
        <hr>
        <%= render 'socify/comments/form', commentable: @event %>
        <br>
        <div class="comments">
          <%= render(@comments) || render('socify/shared/no_resource', resources: 'Comments') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
